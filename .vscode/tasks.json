{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pascal",
            "type": "shell",
            "windows": {
                "command": "FPC_BIN_PATH"
            },
            "linux": {
                "command": "FPC_BIN_PATH"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "args": [
                {
                    "value": "YOUR_FREEPASCAL_PROJECT_OR_FILE",
                    "quoting": "escape"
                }
            ],
            "problemMatcher": {
                "owner": "external",
                "pattern": {
                    "regexp": "^([\\w]+\\.(p|pp|pas))\\((\\d+)\\,(\\d+)\\)\\s(Fatal|Error|Warning|Note):(.*)",
                    "file": 1,
                    "line": 3,
                    "column": 4,
                    "message": 6
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}